<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/forListItem">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/cat_pic"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/Sample" />
    </LinearLayout>
    <TextView
        android:id="@+id/cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/car_pic"
        android:layout_marginLeft="75dip"
        android:layout_centerVertical="true"
        android:paddingBottom="10dip"
        android:text="Mercedes"
        android:textColor="#88AAFF"
        android:textSize="25dip"
        android:textStyle="bold"
        android:typeface="sans" />
    <TextView
        android:id="@+id/cat_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_name"
        android:layout_alignLeft="@+id/cat_name"
        android:paddingTop="5dip"
        android:layout_centerHorizontal="true"
        android:text="Essence"
        android:textColor="#898989"
        android:padding="5sp" />
</RelativeLayout>